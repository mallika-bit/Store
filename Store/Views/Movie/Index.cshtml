@model IEnumerable<Store.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<p>
    @Html.ActionLink("New Movie","NewMovie","Movie",null, new { @class = "btn btn-info btn-sm"})
</p>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <td>
                Movies
            </td>
            <td>Genres</td>
        </tr>
    </thead>
    <tbody>
           @{ 
               foreach (var movie in Model)
               {
                   <tr>
                      <td> @Html.ActionLink(movie.Name,"Edit","Movie" ,new { Id = movie.Id },null) </td>
                       <td>@movie.Genres.Name</td>
                   </tr>
               }
           }

        </tbody>

</table>
