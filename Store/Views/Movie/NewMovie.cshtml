@model Store.ViewModels.NewMovieViewModel
@{
    ViewBag.Title = "NewMovie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>NewMovie</h2>

@using (Html.BeginForm("Save", "Movie"))
{
   @* @Html.ValidationSummary(true, "Please fix the following errors", new { @class = "alert alert-danger" })*@

    <div class=" form-group">
        @Html.LabelFor(m => m.Movie.Name)
        @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control" })
       @Html.ValidationMessageFor(m => m.Movie.Name) 
    </div>
    <div class=" form-group">
        @Html.LabelFor(m => m.Movie.ReleaseDate)
        @Html.TextBoxFor(m => m.Movie.ReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movie.ReleaseDate)
    </div>
    <div class=" form-group">
        @Html.LabelFor(m => m.Movie.DateAdded)
        @Html.TextBoxFor(m => m.Movie.DateAdded, new { @class = "form-control" })
    </div>
    <div class=" form-group">
        @Html.LabelFor(m => m.Movie.GenresId)
        @Html.DropDownListFor(m => m.Movie.GenresId, new SelectList(Model.Genres, "Id", "Name"), new { @class = "form-control" })
        @Html.ValidationMessageFor(m=>m.Movie.GenresId)
       
    </div>
    <div class=" form-group">
        @Html.LabelFor(m => m.Movie.NumbersInStock)
        @Html.TextBoxFor(m => m.Movie.NumbersInStock, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movie.NumbersInStock) 
    </div>

    @Html.HiddenFor(m => m.Movie.Id)
    @Html.AntiForgeryToken()

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
}
@section scripts{

    @Scripts.Render("~/bundles/jqueryval")

}